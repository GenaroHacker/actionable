<StepsScreen>:
    ScrollView:
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        do_scroll_x: False
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 30
            spacing: 30

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10

                Label:
                    id: task_text_label
                    text: 'Task Text Placeholder'
                    color: (0, 0, 0)

                Label:
                    id: steps_completed_label
                    text: 'Steps Completed Placeholder'
                    color: (0, 0, 0)

            GridLayout:
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.9, 0.9, 0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: 'Pause'
                    id: pause_or_resume_button
                    size_hint_y: None
                    height: 50
                    on_press: root.pause_or_resume()
                Button:
                    text: 'Cancel'
                    id: cancel_button
                    size_hint_y: None
                    height: 50
                    on_press: root.cancel()
                Button:
                    text: 'Next Step'
                    id: next_step_button
                    size_hint_y: None
                    height: 50
                    on_press: root.next_step()
