<HabitsScreen>:
    ScrollView:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
        do_scroll_x: False
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 30
            spacing: 30
            Label:
                text: 'Habits'
                color: (1, 1, 1)
                canvas.before:
                    Color:
                        rgb: 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 250
            GridLayout:
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.5, 0.5, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: 'Tasks'
                    size_hint_y: None
                    height: 250
                    on_press: root.go_to_tasks()
                Button:
                    text: 'To-Do'
                    size_hint_y: None
                    height: 250
                    on_press: root.go_to_todos()
                Button:
                    text: 'Habits'
                    size_hint_y: None
                    height: 250
                    disabled: True
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                TextInput:
                    id: new_habit
                    hint_text: 'Enter new habit'
                    size_hint_y: None
                    height: 200

                Button:
                    text: 'Create New Habit'
                    size_hint_y: None
                    height: 250
                    disabled: new_habit.text == ''
                    on_press: root.create_new_habit()

                Label:
                    id: current_habit_label
                    text: 'Current Habit: '
                    size_hint_y: None
                    height: 300

                Label:
                    id: question_label
                    text: 'Do you want to break or keep your current habit?'
                    size_hint_y: None
                    height: 300

                BoxLayout:
                    size_hint_y: None
                    height: 250
                    orientation: 'horizontal'

                    Button:
                        id: break_button
                        text: 'Break'
                        size_hint_x: 0.5
                        on_press: root.break_habit()

                    Button:
                        id: keep_button
                        text: 'Keep'
                        size_hint_x: 0.5
                        on_press: root.keep()
