<TasksScreen>:
    ScrollView:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
        do_scroll_x: False
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 30
            spacing: 30
            Label:
                text: 'Tasks'
                color: (1, 1, 1)
                canvas.before:
                    Color:
                        rgb: 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 100
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ToggleButton:
                    text: 't1'
                    id: t1
                    group: 'tasks'
                    size_hint_y: None
                    height: 50
                    on_state: root.update_start_button_state()
                ToggleButton:
                    text: 't2'
                    id: t2
                    group: 'tasks'
                    size_hint_y: None
                    height: 50
                    on_state: root.update_start_button_state()
                ToggleButton:
                    text: 't3'
                    id: t3
                    group: 'tasks'
                    size_hint_y: None
                    height: 50
                    on_state: root.update_start_button_state()
                ToggleButton:
                    text: 't4'
                    id: t4
                    group: 'tasks'
                    size_hint_y: None
                    height: 50
                    on_state: root.update_start_button_state()
                ToggleButton:
                    text: 't5'
                    id: t5
                    group: 'tasks'
                    size_hint_y: None
                    height: 50
                    on_state: root.update_start_button_state()
            GridLayout:
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgb: 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    id: change_place
                    text: 'Change Place'  # This will be updated in the Python code
                    size_hint_y: None
                    height: 50
                    on_press: root.change_place()
                Button:
                    text: 'Refresh'
                    size_hint_y: None
                    height: 50
                    on_press: root.refresh()
                Button:
                    text: 'Start'
                    id: start_button
                    disabled: True
                    size_hint_y: None
                    height: 50
                    on_press:
                        root.start()